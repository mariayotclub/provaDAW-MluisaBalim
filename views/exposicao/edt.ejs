<%- include('../cabecalho.ejs') %>

<h1>Editar Exposição</h1>

<div>
    <a href="/exposicao/lst" class="btn">Listar</a>
</div>

<div>
    <form method="post">
       
        <input type="hidden" name="id" value="<%= Exposicao.id %>">

        <div class="form-group">
            <label>Nome da Exposição Individual:</label>
            <input type="text" name="nomeColecao" value="<%= Exposicao.nomeColecao %>"><br>
        </div>

        <div class="form-group">
            <label>Tema:</label>
            <input type="text" name="tema" value="<%= Exposicao.tema %>"><br>
        </div>

        <div class="form-group">
            <label>Artista:</label>
            <select name="artista" id="">
                <option value=""></option>
                <option value="oi">oi</option>
            </select>
        </div>

        <button type="submit">Atualizar</button>
        
    </form>
</div>

