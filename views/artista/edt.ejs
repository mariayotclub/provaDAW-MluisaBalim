<%- include('../cabecalho.ejs') %>

<h1>Editar Artista</h1>

<div>
    <a href="/artista/lst" class="btn">Listar</a>
</div>

<div>
    <form method="post">
       
        <input type="hidden" name="id" value="<%= Artista.id %>">

        <div class="form-group">
            <label>Nome:</label>
            <input type="text" name="nome" value="<%= Artista.nome %>"><br>
        </div>

        <div class="form-group">
            <label>Data de Nascimento:</label>
            <input type="date" name="dataNascimento" value="<%= Artista.dataNascimento %>"><br>
        </div>

        <div class="form-group">
            <label>CPF:</label>
            <input type="number" name="CPF" value="<%= Artista.CPF %>"><br>
        </div>

        <div class="form-group">
            <label>Email:</label>
            <input type="text" name="email" value="<%= Artista.email %>"><br>
        </div>

        <div class="form-group">
            <label>Celular:</label>
            <input type="number" name="celular" value="<%= Artista.celular %>"><br>
        </div>

        <button type="submit">Atualizar Dados</button>
        
    </form>
</div>

